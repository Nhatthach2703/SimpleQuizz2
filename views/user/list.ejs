<% layout = '../layouts/main'; %>

<div class="container mt-4">
    <h2 class="mb-3">User List</h2>
    
    <% if (users.length > 0) { %>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= user.username %></td>
                        <td>
                            <span class="badge <%= user.admin ? 'bg-danger' : 'bg-primary' %>">
                                <%= user.admin ? 'Admin' : 'User' %>
                            </span>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p class="alert alert-warning">No users found.</p>
    <% } %>
    <a href="/" class="btn btn-primary mt-3">Back</a>
</div>
