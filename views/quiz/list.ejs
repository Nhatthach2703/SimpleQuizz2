<% layout = '../layouts/main'; %>

<div class="container mt-4">
    <h2>Quiz List</h2>
    <a href="/quizzes/create" class="btn btn-success mb-3">Create New Quiz</a> <!-- /quiz → /quizzes -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% quizzes.forEach((quiz, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= quiz.title %></td>
                    <td>
                        <a href="/quizzes/<%= quiz._id %>" class="btn btn-info">View</a>  <!-- /quiz → /quizzes -->
                        <a href="/quizzes/<%= quiz._id %>/edit" class="btn btn-warning">Edit</a>  <!-- /quiz → /quizzes -->
                        <form action="/quizzes/<%= quiz._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
