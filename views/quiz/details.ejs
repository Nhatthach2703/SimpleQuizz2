<% layout = '../layouts/main'; %>

<div class="container mt-4">
    <h2><%= quiz.title %></h2>
    <p><strong>Description:</strong> <%= quiz.description %></p>

    <h3>Questions</h3>
    <ul class="list-group">
        <% quiz.questions.forEach((question) => { %>
            <li class="list-group-item"><%= question.text %></li>
        <% }); %>
    </ul>

    <!-- Nút tạo câu hỏi cho Quiz -->
    <a href="/quizzes/<%= quiz._id %>/question" class="btn btn-success mt-3">Create Question</a>

    <a href="/quizzes" class="btn btn-secondary mt-3">Back</a>
</div>
